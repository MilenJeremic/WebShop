<%- include("../../shared/includes/head", {pageTitle: "Signup"}) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<%- include("../../shared/includes/header") %>
<body>
    <main>
        <h1>Create New Account</h1>
         <% if (inputData.errorMessage) { %> <!-- check for displaying error message -->
        <section class="alert">
            <h2>Invalid Input</h2>
            <p><%= inputData.errorMessage %></p>
        </section>
        <% } %>
        <form action="/signup" method="POST"> <!-- form for user signup -->
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> <!-- added csrf protection -->
            <p>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirmEmail">Confirm Email</label>
                <input type="email" name="confirmEmail" id="confirmEmail" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" minlength="6" value="<%= inputData.password %>" required>
            </p>
            <hr>
            <p>
                <label for="fullName">Full Name</label>
                <input type="text" name="fullName" id="fullName" value="<%= inputData.fullName %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal" id="postal" minlength="5" maxlength="18" value="<%= inputData.postal %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%= inputData.city %>" required>
            </p>
            <!-- button for form submission -->
            <button class="btn">Create Account</button>
            <!-- option if user knows that he/she signedup -->
            <p id="switchForm"><a href="/login">Login instead</a></p>
        </form>
    </main>
</body>

<%- include("../../shared/includes/footer") %>
